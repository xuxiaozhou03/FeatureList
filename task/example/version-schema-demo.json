{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "英文版本名称，如：enterprise, community"
    },
    "description": {
      "type": "string",
      "description": "版本说明或备注信息"
    },
    "features": {
      "type": "object",
      "properties": {
        "user": {
          "type": "object",
          "name": "用户管理",
          "description": "管理系统中的用户，包括新增、编辑、删除等操作",
          "properties": {
            "enabled": {
              "type": "boolean",
              "name": "启用用户管理",
              "description": "是否启用用户管理功能"
            },
            "config": {
              "type": "object",
              "name": "用户管理配置",
              "description": "用户管理相关配置项",
              "properties": {
                "allowBatchDelete": {
                  "type": "boolean",
                  "name": "允许批量删除",
                  "description": "是否允许批量删除用户",
                  "default": false
                },
                "maxUsers": {
                  "type": "number",
                  "name": "最大用户数",
                  "description": "系统允许的最大用户数量",
                  "default": 100
                },
                "userRole": {
                  "type": "string",
                  "name": "用户角色",
                  "description": "用户角色类型",
                  "enum": ["admin", "user", "guest"],
                  "enumDesc": ["管理员", "普通用户", "访客"],
                  "default": "user"
                }
              },
              "required": ["allowBatchDelete", "maxUsers", "userRole"]
            },
            "addUser": {
              "type": "object",
              "name": "新增用户",
              "description": "新增用户功能相关配置",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "name": "启用新增用户",
                  "description": "是否启用新增用户功能"
                },
                "config": {
                  "type": "object",
                  "name": "新增用户配置",
                  "description": "新增用户相关配置项",
                  "properties": {
                    "requireEmail": {
                      "type": "boolean",
                      "name": "需要邮箱",
                      "description": "新增用户时是否需要邮箱",
                      "default": true
                    }
                  },
                  "required": ["requireEmail"]
                }
              },
              "required": ["enabled", "config"]
            },
            "deleteUser": {
              "type": "object",
              "name": "删除用户",
              "description": "删除用户功能相关配置",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "name": "启用删除用户",
                  "description": "是否启用删除用户功能"
                },
                "config": {
                  "type": "object",
                  "name": "删除用户配置",
                  "description": "删除用户相关配置项",
                  "properties": {
                    "confirmBeforeDelete": {
                      "type": "boolean",
                      "name": "删除前确认",
                      "description": "删除用户前是否需要确认",
                      "default": true
                    }
                  },
                  "required": ["confirmBeforeDelete"]
                }
              },
              "required": ["enabled", "config"]
            }
          },
          "required": ["name", "enabled", "config", "addUser", "deleteUser"]
        }
      },
      "required": ["user"],
      "additionalProperties": false
    }
  },
  "required": ["name", "features"],
  "additionalProperties": false
}
