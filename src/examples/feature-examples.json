{
  "dashboard": {
    "name": "仪表板",
    "description": "项目数据展示和监控",
    "paramSchema": {
      "layout": {
        "type": "string",
        "enum": ["grid", "list", "card"],
        "description": "布局方式",
        "default": "grid",
        "required": true
      },
      "refreshInterval": {
        "type": "number",
        "minimum": 5,
        "maximum": 3600,
        "description": "刷新间隔（秒）",
        "default": 30
      },
      "widgets": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": ["metrics", "charts", "activity", "notifications"]
        },
        "description": "启用的组件列表",
        "default": ["metrics", "activity"]
      }
    }
  },
  "projects": {
    "name": "项目管理",
    "description": "项目创建、配置和管理",
    "paramSchema": {
      "maxProjects": {
        "type": "number",
        "minimum": 1,
        "maximum": 1000,
        "description": "最大项目数量",
        "default": 100,
        "required": true
      },
      "visibility": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": ["public", "private", "internal"]
        },
        "description": "支持的可见性级别",
        "default": ["public", "private"]
      },
      "templates": {
        "type": "boolean",
        "description": "是否支持项目模板",
        "default": true
      }
    },
    "children": {
      "pipelines": {
        "name": "CI/CD流水线",
        "description": "持续集成和部署",
        "paramSchema": {
          "maxPipelines": {
            "type": "number",
            "minimum": 1,
            "maximum": 100,
            "description": "最大流水线数量",
            "default": 10
          },
          "concurrentBuilds": {
            "type": "number",
            "minimum": 1,
            "maximum": 10,
            "description": "并发构建数量",
            "default": 3
          },
          "buildTimeout": {
            "type": "number",
            "minimum": 300,
            "maximum": 7200,
            "description": "构建超时时间（秒）",
            "default": 3600
          },
          "supportedRunners": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["docker", "shell", "kubernetes"]
            },
            "description": "支持的运行器类型",
            "default": ["docker"]
          }
        }
      },
      "repositories": {
        "name": "代码仓库",
        "description": "源代码管理",
        "paramSchema": {
          "maxRepos": {
            "type": "number",
            "minimum": 1,
            "maximum": 500,
            "description": "最大仓库数量",
            "default": 50
          },
          "branchProtection": {
            "type": "boolean",
            "description": "是否启用分支保护",
            "default": true
          },
          "webhooks": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["push", "pull_request", "release", "issues"]
            },
            "description": "支持的 webhook 事件类型",
            "default": ["push", "pull_request"]
          }
        }
      }
    }
  },
  "analytics": {
    "name": "数据分析",
    "description": "项目数据分析和报表",
    "paramSchema": {
      "dataRetention": {
        "type": "number",
        "minimum": 30,
        "maximum": 365,
        "description": "数据保留天数",
        "default": 90
      },
      "reportTypes": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": ["daily", "weekly", "monthly", "quarterly"]
        },
        "description": "支持的报表类型",
        "default": ["daily", "weekly"]
      },
      "exportFormats": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": ["pdf", "excel", "csv", "json"]
        },
        "description": "支持的导出格式",
        "default": ["pdf", "excel"]
      }
    }
  }
}
