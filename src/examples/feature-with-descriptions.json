{
  "userInterface": {
    "name": "用户界面",
    "description": "用户界面配置和主题设置",
    "paramSchema": {
      "theme": {
        "type": "string",
        "enum": ["light", "dark", "auto"],
        "enumDescriptions": [
          "浅色主题，适合白天使用",
          "深色主题，适合夜间使用",
          "自动主题，根据系统设置自动切换"
        ],
        "description": "界面主题设置",
        "default": "auto",
        "required": true
      },
      "language": {
        "type": "string",
        "enum": ["zh-CN", "en-US", "ja-JP"],
        "enumDescriptions": ["简体中文", "English (US)", "日本語"],
        "description": "界面语言",
        "default": "zh-CN"
      },
      "fontSize": {
        "type": "number",
        "minimum": 12,
        "maximum": 24,
        "description": "字体大小",
        "default": 14
      },
      "components": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": ["header", "sidebar", "footer", "toolbar"],
          "enumDescriptions": [
            "顶部导航栏",
            "侧边栏菜单",
            "底部状态栏",
            "工具栏"
          ]
        },
        "description": "启用的界面组件",
        "default": ["header", "sidebar"]
      },
      "layout": {
        "type": "object",
        "properties": {
          "width": {
            "type": "string",
            "enum": ["fixed", "fluid", "responsive"],
            "enumDescriptions": ["固定宽度布局", "流体宽度布局", "响应式布局"],
            "description": "布局宽度模式",
            "default": "responsive"
          },
          "sidebar": {
            "type": "string",
            "enum": ["left", "right", "hidden"],
            "enumDescriptions": ["左侧边栏", "右侧边栏", "隐藏侧边栏"],
            "description": "侧边栏位置",
            "default": "left"
          }
        },
        "description": "布局配置"
      }
    }
  },
  "notifications": {
    "name": "通知系统",
    "description": "系统通知和提醒配置",
    "paramSchema": {
      "enabled": {
        "type": "boolean",
        "description": "是否启用通知",
        "default": true
      },
      "types": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": ["email", "sms", "push", "webhook"],
          "enumDescriptions": [
            "邮件通知",
            "短信通知",
            "推送通知",
            "Webhook 通知"
          ]
        },
        "description": "支持的通知类型",
        "default": ["email", "push"]
      },
      "priority": {
        "type": "string",
        "enum": ["low", "medium", "high", "urgent"],
        "enumDescriptions": [
          "低优先级，非紧急通知",
          "中等优先级，一般通知",
          "高优先级，重要通知",
          "紧急优先级，立即通知"
        ],
        "description": "通知优先级",
        "default": "medium"
      }
    },
    "children": {
      "emailConfig": {
        "name": "邮件配置",
        "description": "邮件通知详细配置",
        "paramSchema": {
          "server": {
            "type": "string",
            "description": "邮件服务器地址",
            "default": "smtp.example.com"
          },
          "port": {
            "type": "number",
            "minimum": 1,
            "maximum": 65535,
            "description": "邮件服务器端口",
            "default": 587
          },
          "encryption": {
            "type": "string",
            "enum": ["none", "ssl", "tls"],
            "enumDescriptions": ["无加密", "SSL 加密", "TLS 加密"],
            "description": "邮件加密方式",
            "default": "tls"
          }
        }
      }
    }
  }
}
